{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "app",
      "host": {
        "sourcePath": "/var/app/shared/logs"
      }
    },
    {
      "name": "credentials",
      "host": {
        "sourcePath": "/nbt/cert"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/proxy/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "app",
      "image": "1111111111.dkr.ecr.ap-northeast-2.amazonaws.com/test-dev:latest",
      "environment": [],
      "essential": true,
      "memory": 2048,
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "app",
          "containerPath": "/app/logs",
          "readOnly": false
        },
        {
          "sourceVolume": "credentials",
          "containerPath": "/nbt/cert",
          "readOnly": true
        }
      ]
    },
    {
      "name": "nginx",
      "image": "nginx:latest",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "links": [
        "app"
      ],
      "mountPoints": [
        {
          "sourceVolume": "app",
          "containerPath": "/app/logs",
          "readOnly": false
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    }
  ]
}